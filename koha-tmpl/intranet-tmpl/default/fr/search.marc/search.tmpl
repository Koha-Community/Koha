<span style="font-size:2em; text-align:left;">Recherche MARC</span>

<center>
<form name="f" method="post">

<input type="hidden" name="op" value="do_search">
<input type="hidden" name="type" value="intranet">
<input type="hidden" name="nbstatements" value="<!-- TMPL_VAR NAME="nbstatements" -->">

	<table border=0 cellspacing=0 cellpadding=2 width="100%">
		<tr align="center">
			<td>
				<div name="sql">
				<textarea name="sql" rows=5 cols=60 disabled readonly></textarea>
				</div>
			</td>
			<td bgcolor="#ad11ad" valign="top" align="left">
				<span style="color:#FFFFFF;">
					<b>AIDE :</b><br/>
					Construisez votre requête avec les champs et les sous-champs MARC. "Ajouter des critères" permet d'ajouter un autre critère à la recherche. "Recherche" lance la requête et affiche les résultats.
				</span>
			</td>
		</tr>
	</table>
	<table border=0 cellspacing=0 cellpadding=2 width="100%">
		<!-- TMPL_LOOP NAME="statements" -->
		<tr>
			<td>
				<!-- TMPL_IF NAME="first" -->
					<input type="hidden" name="and_or" value="">&nbsp;
				<!-- TMPL_ELSE -->
					<select name="and_or" size="1" onchange="sql_update()">
						<option value="et">et</option>
						<option <!-- TMPL_IF NAME="ou" -->selected <!-- /TMPL_IF -->valeur="ou">ou</option>
					</select>
				<!-- /TMPL_IF -->
			</td>
			<td><!-- TMPL_VAR name="marclist" --></td>
			<td>
				<select name="excluding" size="1" onchange="sql_update()">
					<option value="0"> </option>
					<option <!-- TMPL_IF NAME="not" -->selected <!-- /TMPL_IF -->valeur="1">not</option>
				</select>
			</td>
			<td>
				<select name="operator" size="1" onchange="sql_update()">
					<!-- TMPL_IF NAME="contains" -->
						<option selected value="contains">Contient</option>
					<!-- TMPL_ELSE -->
						<option value="contains">Contient</option>
					<!-- /TMPL_IF -->
					<!-- TMPL_IF NAME="eq" -->
						<option selected value="=">Egal à</option>
					<!-- TMPL_ELSE -->
						<option value="=">Egal à</option>
					<!-- /TMPL_IF -->
					<!-- TMPL_IF NAME="start" -->
						<option selected value="start">Commence par</option>
					<!-- TMPL_ELSE -->
						<option value="start">Commence par</option>
					<!-- /TMPL_IF -->
					<!-- TMPL_IF NAME="gt" -->
						<option selected value=">">Supérieur à</option>
					<!-- TMPL_ELSE -->
						<option value=">">Supérieur à</option>
					<!-- /TMPL_IF -->
					<!-- TMPL_IF NAME="ge" -->
						<option selected value=">=">Supérieur ou égal à</option>
					<!-- TMPL_ELSE -->
						<option value=">=">Supérieur ou égal à</option>
					<!-- /TMPL_IF -->
					<!-- TMPL_IF NAME="lt" -->
						<option selected value="<">Inférieur à</option>
					<!-- TMPL_ELSE -->
						<option value="<">Inférieur à</option>
					<!-- /TMPL_IF -->
					<!-- TMPL_IF NAME="le" -->
						<option selected value="<=">Inférieur ou égal à</option>
					<!-- TMPL_ELSE -->
						<option value="<=">Inférieur ou égal à</option>
					<!-- /TMPL_IF -->
				</select>
			</td>
			<td><input type="text" name="value" onChange="sql_update()" <!-- TMPL_IF NAME="value" -->valeur="<!-- TMPL_VAR NAME="value" -->"<!-- /TMPL_IF -->></td>
		</tr>
		<!-- /TMPL_LOOP -->
	</table>
	<br>

	<table width="90%">
	<tr>
	<td align="left" width="33%"><input type="button" value="Ajouter un critère" onClick="AddStatement()" class="button"></td>
	<td align="middle" width="33%"><input type="submit" value="Lancer la recherche" class="button"></td>
	<td align="right" width="33%">Résultats par page :
		<select align="right" name="resultsperpage" size="1">
			<option value="20">20</option>
			<option value="50">50</option>
			<option value="100">100</option>
		</select>
	</td>
	</tr>
	</table>
</form>
</center>

<script>
function sql_update() {
document.f.sql.value="";
	for (i=0 ; i<document.f.marclist.length ; i++) {
		if (document.f.marclist[i].value != '') {
			document.f.sql.value = document.f.sql.value+
										document.f.and_or[i].value + ' (' +
										document.f.excluding[i].value + ' ' +
										document.f.marclist[i].value + ' ' +
										document.f.operator[i].value + ' ' +
										'\''+document.f.value[i].value + '\') ';
		}
	}
}

function AddStatement() {

	document.forms[0].op.value="AddStatement";
	document.f.submit();
}

</script>
