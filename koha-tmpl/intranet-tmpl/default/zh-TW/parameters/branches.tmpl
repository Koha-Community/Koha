<TMPL_INCLUDE NAME="parameters-top.inc">
<TMPL_IF NAME="loggedinuser">
    <p align=left>Logged in as: <TMPL_VAR NAME="loggedinuser"> [<a href="/cgi-bin/koha/mainpage.pl?logout.x=1">Log out</a>]</p>
<TMPL_ELSE>
    <p align=left><a href="/cgi-bin/koha/opac-user.pl">登入</a> <span lang=mi>Koha</span></p>
</TMPL_IF>

<TMPL_IF name="add">
<form action='<TMPL_VAR name=action>' name=Aform method=post>
<input type=hidden name=op value='add_validate'>
<table>
<tr><td>分館編碼</td><td><input type=text name=branchcode size=5 maxlength=5 value='<TMPL_VAR name=branchcode escape="HTML">'</td></tr>
<tr><td>館名</td><td><input type=text name=branchname size=40 maxlength=80 value="<TMPL_VAR name=branchname escape="HTML">">&nbsp;</td></tr>
<FONT SIZE=6><em><TMPL_VAR name=head></em></FONT><br>
<tr><td><TMPL_VAR name=categoryname></td>
<td><INPUT TYPE="checkbox" NAME="<TMPL_VAR name=categorycode>" VALUE="1" ><TMPL_VAR name=codedescription></td></tr>
<tr><td>地址</td><td><input type=text name=branchaddress1 value='<TMPL_VAR name=branchaddress1 escape="HTML">'></td></tr>
<tr><td>&nbsp;</td><td><input type=text name=branchaddress2 value='<TMPL_VAR name=branchaddress2 escape="HTML">'></td></tr>
<tr><td>&nbsp;</td><td><input type=text name=branchaddress3 value='<TMPL_VAR name=branchaddress3 escape="HTML">'></td></tr>
<tr><td>電話</td><td><input type=text name=branchphone value='<TMPL_VAR name=branchphone escape="HTML">'></td></tr>
<tr><td>傳真</td><td><input type=text name=branchfax value='<TMPL_VAR name=branchfax escape="HTML">'></td></tr>
<tr><td>電郵</td><td><input type=text name=branchemail value='<TMPL_VAR name=branchemail escape="HTML">'></td></tr>
<tr><td>&nbsp;</td><td><input type=submit value='Submit'></td></tr>
</table>
</form>
</TMPL_IF>

<TMPL_IF name="delete_confirm">
Confirm delete:
<form action='<TMPL_VAR name=action>' method=post><input type='hidden' name='op' value='delete_confirmed'>
<input type='hidden' name='branchcode' value=<TMPL_VAR name=branchcode escape="HTML">>
<input type=submit value=YES></form>
<form action='<TMPL_VAR name=action>' method=post><input type='hidden' name='op' value=''>
<input type=submit value=NO></form>
</TMPL_IF>

<TMPL_IF name="else">
<FONT SIZE=6><em><TMPL_VAR name=head></em></FONT><br>
<font color='red'><TMPL_VAR name="message"></font>
<form action=<TMPL_VAR name=action> method=post><input type='hidden' name='op' value='add'><input type=submit value='加一新館'></form>
<table border='1' cellpadding='5' cellspacing='0' width='550'>
<tr> <th colspan='5' align='left' bgcolor='#99cc33'>
<font size='5'><b>分館一覽</b></font></th> </tr>
<tr bgcolor='#889999'>
<td width='175'><b>館名</b></td>
<td width='25'><b>編碼</b></td>
<td width='175'><b>地址</b></td>
<td width='175'><b>類別</b></td>
<td width='50'><b>&nbsp;</b></td>
</tr>
<TMPL_LOOP name="branches">
<tr bgcolor='<TMPL_VAR name=color>'>
    <td align='left' valign='top'><TMPL_VAR name=branch_name escape="HTML"></td>
    <td align='left' valign='top'><TMPL_VAR name=branch_code escape="HTML"></td>
    <td align='left' valign='top'><TMPL_VAR name=address escape="HTML"></td>
    <td align='left' valign='top'><TMPL_VAR name=categories escape="HTML"></td>
    <td align='left' valign='top'>
<form action='<TMPL_VAR name=action>' method=post>
<input type='hidden' name='op' value='edit'>
<input type='hidden' name='branchcode' value='<TMPL_VAR name=value escape="HTML">'>
<input type=submit value="更改">
</form>
<form action='<TMPL_VAR name=action>' method=post>
<input type='hidden' name='branchcode' value='<TMPL_VAR name=value escape="HTML">'>
<input type='hidden' name='op' value='delete'><input type=submit value="刪除">
</form></td>
</tr>
</TMPL_LOOP>
</table>
<br>
<table border='1' cellpadding='5' cellspacing='0'>
<tr> <th colspan='5' align='left' bgcolor='#99cc33'>
<font size='5'><b>分館類別</b></font></th> </tr> 
<tr bgcolor='#889999'> 
<td width='175'><b>類別</b></td> 
<td width='25'><b>編碼</b></td> 
<td width='200'><b>說明</b></td>
</tr>
<tr bgcolor='<TMPL_VAR name="color">'>
    <td align='left' valign='top'><TMPL_VAR name=categoryname></td>
    <td align='left' valign='top'><TMPL_VAR name=categorycode></td>
    <td align='left' valign='top'><TMPL_VAR name=codedescription></td>
</tr>
</table>
</TMPL_IF>

