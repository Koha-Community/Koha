			    summary.rows= ( cnt > 6 ) ? cnt : 6 ; // textarea will bre resized, but not more than 6 lines will show.
		    }
        }
}

IrregularPattern.prototype.irregular = function(index) { 
	for( var i in this.skipped) {
			if( this.skipped[i] == index) {
				return true;
			}
	}
	return false;
}

