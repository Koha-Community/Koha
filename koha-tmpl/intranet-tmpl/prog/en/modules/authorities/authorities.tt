                    <input type="hidden"
                        tabindex="1"
                        name="tag_[% innerloo.tag | html %]_indicator2_[% innerloo.index | html %][% innerloo.random | html %]"
                        value="[% innerloo.indicator2 | html %]" />
                [% END %]
        [% END %]

            [% UNLESS advancedMARCEditor %]
