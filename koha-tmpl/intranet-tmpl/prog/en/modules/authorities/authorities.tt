        [% FOREACH BIG_LOO IN BIG_LOOP %]
        <li><a href="#tab[% BIG_LOO.number | uri %]XX">[% BIG_LOO.number | html %]</a></li>
        [% END %]
    </ul>

[% FOREACH BIG_LOO IN BIG_LOOP %]
    <div id="tab[% BIG_LOO.number | html %]XX">

    [% FOREACH innerloo IN BIG_LOO.innerloop %]
