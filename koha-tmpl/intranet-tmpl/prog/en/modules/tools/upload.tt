    [% END #/ WRAPPER sub-header.inc %]

    <div class="main container-fluid">
        <div class="row">
            <div class="col-sm-10 col-sm-push-2">
                <main>
[% END %]

<h1>Upload</h1>
<div class="dialog alert" id="myalerts" style="display:none;"></div>

[% PROCESS submitter %]
[% IF mode == 'new' || mode == 'deleted' %]
    [% PROCESS form_new %]
    <div class="row">
        [% IF uploadcategories %]
            <div class="col-xs-6">
                [% PROCESS form_browse %]
            </div>
            <div class="col-xs-6">
        [% ELSE %]
            <div class="col-xs-12">
        [% END %]
            [% PROCESS form_search %]
        </div>
    </div>
    [% PROCESS closer %]
[% ELSIF mode == 'report' %]
    <div id="toolbar" class="btn-toolbar">
        <a href="/cgi-bin/koha/tools/upload.pl" class="btn btn-default">Upload file</a>
    </div>
    [% IF uploads %]
        <h3>Your request gave the following results:</h3>
        [% PROCESS table_results %]
        [% PROCESS closer %]
        [% PROCESS back %]
