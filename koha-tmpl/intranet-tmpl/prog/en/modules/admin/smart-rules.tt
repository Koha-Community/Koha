                          [% IF ( current_branch == '*' ) %]
                            [% IF ( refundLostItemFeeRule.refund == 1 ) %]
                            <option value="1" selected="selected">
                            [% ELSE %]
                            <option value="1">
                            [% END %]
                                Yes
                            </option>

                            [% IF ( refundLostItemFeeRule.refund == 0 ) %]
                            <option value="0" selected="selected">
                            [% ELSE %]
                            <option value="0">
                            [% END %]
                                No
                            </option>

                            [% IF ( refundLostItemFeeRule.refund == 2 ) %]
                            <option value="2" selected="selected">
                            [% ELSE %]
                            <option value="2">
                            [% END %]
                                Only if unpaid
                            </option>
                          [% ELSE %]
                          [#% Branch-specific %#]
                            [% IF ( not refundLostItemFeeRule ) %]
                                <option value="*" selected="selected">
                            [% ELSE %]
                                <option value="*">
                            [% END %]
                              [% IF defaultRefundRule == 1 %]
                                Use default (Yes)
                              [% ELSIF defaultRefundRule == 2 %]
                                Use default (Only if unpaid)
                              [% ELSE %]
                                Use default (No)
                              [% END %]
                                </option>
                            [% IF ( not refundLostItemFeeRule ) %]
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                                <option value="2">Only if unpaid</option>
                            [% ELSE %]
                                [% IF ( refundLostItemFeeRule.refund == 1 ) %]
                                <option value="1" selected="selected">
                                [% ELSE %]
                                <option value="1">
                                [% END %]
                                    Yes
                                </option>

                                [% IF ( refundLostItemFeeRule.refund == 0 ) %]
                                <option value="0" selected="selected">
                                [% ELSE %]
                                <option value="0">
                                [% END %]
                                    No
                                </option>

                                [% IF ( refundLostItemFeeRule.refund == 3 ) %]
                                <option value="3" selected="selected">
                                [% ELSE %]
                                <option value="3">
                                [% END %]
                                    Only if unpaid
                                </option>
                            [% END %]
                          [% END %]
                        </select>
                    </td>
                    <td class="actions">
                        <button type="submit" class="btn btn-default btn-xs"><i class="fa fa-save"></i> Save</button>
                    </td>
                    </td>
