<script type="text/javascript">
//<![CDATA[
$(document).ready(function() {
    $( ".constraints" ).accordion();
    $('#subfieldtabs').tabs();
    $("input[id^='hidden_']").click(setHiddenValue);
    $("input[id^='hidden-']").each(function() {
            populateHiddenCheckboxes($(this).attr('id').split('-')[1]);
    });

});

