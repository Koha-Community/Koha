	</form>


<!--TMPL_IF NAME="results" -->
	<p>Searched for <span class="ex"><!-- TMPL_VAR NAME="member" --></span>, <!-- TMPL_VAR Name ="numresults" --> patron(s) found:</p>
	<table>
		<tr>
			<th>Cardnumber</th>
			<th>Name</th>
			<th>Branch</th>
			<th>Categorycode</th>
            <th>Select?</th>
		</tr>

		<!-- TMPL_LOOP NAME="resultsloop" -->
