             zipcode: "ZIP/Postal code"
             country: "Country"
             branchcode: "Patron's library"
             categorycode: "Patron category"
             dateenrolled: "Date the patron was added to Koha"
             sex: "Patron's gender"
             sort1: "Sort 1"
             sort2: "Sort 2"
