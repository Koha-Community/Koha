                    [% END %]<!-- /reserveloop -->
                [% END %]<!-- /biblioloop -->

                <fieldset class="action">
                    <input type="submit" name="submit" value="Update hold(s)" />
                </fieldset>
            </fieldset>
        </form>
    [% END %]
[% END %]
