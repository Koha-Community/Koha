                        if (validate_date(dateText, inst) ) {
                            $("#barcode").focus();
                        }
                    },
                    hour: 23,
                    minute: 59
                }).on("change", function(e, value) {
                    if ( ! is_valid_date( $(this).val() ) ) {$(this).val("");}
