	deletedborrowers => [
				{
					from => 'emailaddress',
					to => 'email',
					after => 'city',
				},
				{
					from => 'streetaddress',
					to => 'address',
					after => 'initials',
				},
				{
					from => 'faxnumber',
					to => 'fax',
					after => 'phone',
				},
				{
					from => 'textmessaging',
