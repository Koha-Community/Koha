        <ssl_key></ssl_key>                         <!-- SSL key path -->
        <ssl_ca_file></ssl_ca_file>                 <!-- CA certificate path -->

        <!-- Per branch payment server configuration -->
        <branchcode>
            <!--
                Example:

                <CPL>
                    <source></source>
                    <secretKey></secretKey>
                    <url></url>
                    <ssl_cert></ssl_cert>
                    <ssl_key></ssl_key>
                    <ssl_ca_file></ssl_ca_file>
                </CPL>
                <MPL>
                    ...
                </MPL>
            -->
        </branchcode>

        <!-- Koha settings -->
